{% comment %} Navigation Desktop {% endcomment %}
<bs4-navbar class="navbar navbar-dark navbar-main fixed-top bg-primary">

  {% comment %}
    MAINBAR
  {% endcomment %}
  <div class="container-fluid d-block mainbar">
    <div class="row justify-content-between">

      {% comment %}
        MAINBAR LEFT
      {% endcomment %}
      <div class="col-auto d-flex align-items-center">
        <a class="navbar-brand" href="/">Riba</a>
      </div>

      {% comment %}
        MAINBAR RIGHT
      {% endcomment %}
      <div class="col-auto d-flex align-items-center">

        {% comment %}
          Desktop
        {% endcomment %}
        <ul class="nav d-none d-lg-flex">

          <shopify-linklist class="d-flex align-items-center" name="main-menu" vertical="false" pills="false"></shopify-linklist>

        </ul>

        {% comment %}
          Smartphone
        {% endcomment %}
        <ul class="nav d-flex d-lg-none">
          <li class="nav-item">
            <a rv-show="isCollapsed" class="nav-link" rv-on-click="toggle">
              <img lazyload="eager" src="{{ 'iconset-plus.png' | asset_url }}" class="pixelated" width="16" height="16" />
            </a>
          </li>
          <li class="nav-item">
            <a rv-hide="isCollapsed" class="nav-link" rv-on-click="toggle">
              <img lazyload="eager" src="{{ 'iconset-x.png' | asset_url }}" class="pixelated" width="16" height="16" />
            </a>
          </li>
        </ul>

      </div>
    </div>
  </div>

  {% comment %} Collapsed navigation {% endcomment %}
  <div class="collapse navbar-collapse d-lg-none py-3 scrollbar-y-auto">
    <div class="container-fluid">
      <div class="row">
        <shopify-linklist class="col-12" name="main-menu" vertical="true" pills="false"></shopify-linklist>

        <div class="col-12">
          {% section 'navbar-contact-form' %}
        </div>

        <div class="col-12 pb-3 d-flex">
          <tda-i18n-switcher class="d-flex align-items-center language-toggler pr-3">
            <div rv-show="ready" class="nav-item" rv-each-langcode="langcodes" rv-on-click="toggle">
              <div
                class="nav-link text-uppercase"
                rv-text="langcode.code"
                rv-class-active="langcode.active"
              ></div>
            </div>
          </tda-i18n-switcher>

          <div class="nav-item">
            <a class="nav-link" href="/search" rv-route-class-active="'/search'" rv-route="'/search'">
              <img lazyload="eager" class="pixelated" src="{{ 'iconset-glass.png' | asset_url }}" alt="search" width="24" height="24">
            </a>
          </div>

          <div class="nav-item">
            <rv-share class="nav-link" title="{{shop.name}}" text-i18n="blogs.article.share-text" label-i18n="blogs.article.share">
              <img lazyload="eager" rv-show="isNative" class="pixelated" src="{{ 'iconset-share.png' | asset_url }}" alt="share" width="24" height="24">
            </rv-share>
          </div>

        </div>

      </div>
    </div>
  </div>

</bs4-navbar>
